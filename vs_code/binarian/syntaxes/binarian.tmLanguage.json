{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Binarian",
	"patterns": [
		{"include": "#keywords"},
		{"include": "#types"},
		{"include": "#strings"},
		{"include": "#numbers"},
		{"include": "#hex-numbers"},
		{"include": "#oct-numbers"},
		{"include": "#bin-numbers"},
		{"include": "#comments"}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.binarian",
				"match": "\\b(var|drop|output|input|convert|and|or|not|index|setindex|append|zip|if|else|elif|for|while|break|continue|func|return)\\b"
			}]
		},
		"types": {
			"patterns": [{
				"name": "entity.name.type",
				"match": "\\b(int|float|str|list|function|object)\\b"
			}]
		},
		"numbers" : {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\b([0-9]([.]([0-9])*)?)\\b"
			}]
		},
		"hex-numbers" : {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\b(0x[0-9a-fA-F]+)\\b"
			}]
		},
		"oct-numbers" : {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\b(0o[0-7]+)\\b"
			}]
		},
		"bin-numbers" : {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\b(0b[0-1]+)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.binarian",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.binarian",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [{
					"name": "comment.line.binarian",
					"begin": "//",
					"end": "$"
				}]
		}
	},
	"scopeName": "text.binarian"
}
