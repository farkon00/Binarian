{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Binarian",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{ 
			"include": "#comments" 
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.binarian",
				"match": "\\b(set|drop|input|output|and|or|not|index|setindex|len|append|zip|if|else|for|while|func|return)\\b"
			}]
		},
		"comments": {
			"patterns" : [{
				"name": "comment.line.binarian",
				"begin" : "//",
				"end" : "\n"
			}]
		}
	},
	"scopeName": "source.bino"
}